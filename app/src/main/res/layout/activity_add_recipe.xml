<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4">

    <ImageView
        android:id="@+id/IVAAR"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/BAARimage"
        android:text="Choose image"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IVAAR"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

    <EditText
        android:id="@+id/ETAARname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Name"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/BAARimage"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/ETAARingredients"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Ingredients"
        android:layout_below="@+id/ETAARname"
        android:layout_alignLeft="@+id/ETAARname"
        android:layout_alignStart="@+id/ETAARname" />
    <EditText
        android:id="@+id/ETAARrating"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Rating"
        android:layout_below="@+id/ETAARingredients"
        android:layout_alignLeft="@+id/ETAARingredients"
        android:layout_alignStart="@+id/ETAARingredients" />

    <Button
        android:id="@+id/BAARadd"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ETAARrating"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/BAARlist"
        android:text="Personal Recipe List"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/BAARadd"
        android:layout_centerHorizontal="true"
        android:onClick="BAARlistclicked"/>

</RelativeLayout>