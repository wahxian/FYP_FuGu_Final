<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minimalwaste.fypv2_fragments.VoucherDetailsActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo2"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="42dp"
        android:id="@+id/IVAVDproduct"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/discount_ten"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="192dp"
        android:scaleType="fitXY"
        android:id="@+id/IVAVDdiscount"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/barcode"
        tools:layout_editor_absoluteY="184dp"
        tools:layout_editor_absoluteX="42dp"
        android:id="@+id/IVAVDbarcode" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:text="LOREMIPSUM"
        tools:layout_editor_absoluteX="22dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/IVAVDbarcode"
        android:id="@+id/TVAVDdetails"/>

</android.support.constraint.ConstraintLayout>
