<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minimalwaste.fypv2_fragments.RecipeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top"
        android:id="@+id/LLFRTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TVFRTop"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Recipes"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addButton"
            android:onClick="BFRAdd"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Add"
            android:textSize="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RVFR"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/LLFRTop"/>


    <TextView
        android:padding="7dp"
        android:id="@+id/TVFRBottom"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RVFR"
        android:text="Yummly Recipes"/>

    <ListView
        android:id="@+id/LVFRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVFRBottom"/>



</RelativeLayout>
